{% extends 'admin.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-danger text-white text-center p-3 rounded-1">
                                <i class="fa-solid fa-umbrella-beach"></i>
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="dashboard-card-header">
                                <b>Tour packages</b>
                            </div>
                            <p class="badge badge-danger">{{ total_tours_packages }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-primary text-white text-center p-3 rounded-1">
                                <i class="fa-solid fa-location-dot"></i>
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="dashboard-card-header">
                                <b>Destinations</b>
                            </div>
                            <p class="badge badge-danger">{{ total_top_destinations }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-success text-white text-center p-3 rounded-1">
                                <i class="fa-solid fa-hotel"></i>
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="dashboard-card-header">
                                <b>Hotels</b>
                            </div>
                            <p class="badge badge-danger">{{ total_hotels_in_bhutan }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="btn btn-info text-white text-center p-3 rounded-1">
                                <i class="fa-regular fa-newspaper"></i>
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="dashboard-card-header">
                                <b>Blogs</b>
                            </div>
                            <p class="badge badge-danger">{{ total_blogs }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}