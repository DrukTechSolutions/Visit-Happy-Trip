{% extends 'admin.html.twig' %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tour Packages</li>
    </ol>
</nav>
<div>
    <a href="{{ path('add-tour')}}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add Tour</a>
    <table class="table align-middle mb-0 bg-white mt-3">
        <thead class="bg-light">
            <tr>
                <th>Sl. No</th>
                <th>Tour Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for tours_package in tours_packages %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ tours_package.tourCategory|tour_category }}</td>
                <td>$ {{ tours_package.price }}</td>
                <td>
                    <a type="button" href="{{ path('update-tour-package',{'id': tours_package.id })}}" class="btn btn-primary btn-sm btn-rounded">
                        Update
                    </a>
                    <a type="button" href="{{ path('update-tour-package',{'id': tours_package.id })}}" class="btn btn-danger btn-sm btn-rounded">
                        Delete
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}