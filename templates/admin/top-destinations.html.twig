{% extends 'admin.html.twig' %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Top Destinations</li>
    </ol>
</nav>
<div>
    <a href="{{ path('add-top-destination')}}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add Top
        Destinations</a>
    <div class="mt-3">
        {% for message in app.flashes('notice') %}
        <div class="flash-success">
            {{ message }}
        </div>
        {% endfor %}
    </div>
    <table class="table align-middle mb-0 bg-white mt-3">
        <thead class="bg-light">
            <tr>
                <th>Sl. No</th>
                <th>Image</th>
                <th>Destination Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for topDestination in topDestinations %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><img src="{{ asset('uploads/images/'~ topDestination.image.imageName)}}" class="img-fluid"
                        style="height: 50px;"></td>
                <td>{{ topDestination.destinationTitle }}</td>
                <td>
                    <a type="button" href="{{ path('update-top-destination',{'id': topDestination.id })}}"
                        class="btn btn-primary btn-sm btn-rounded">
                        Update
                    </a> {#
                    <a type="button" href="{{ path('update-tour-package',{'id': topDestination.id })}}"
                        class="btn btn-danger btn-sm btn-rounded">
                        Delete
                    </a> #}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}