{% extends "admin.html.twig" %}

{% block body %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item">Hotels in Bhutan</li>
        <li class="breadcrumb-item active" aria-current="page">Add Hotel in Bhutan</li>
    </ol>
</nav>
<div class="mt-2">
    {{ form_start(form)}}
    {% set img_thumbnail = 'images/image-static/img_preview.jpg' %}
    <div class="card rounded-0">
        <div class="card-header bg-danger text-white rounded-0"><b>Hotel in Bhutan</b></div>
        <div class="card-body">
            <div class="row mb-4">
                <label class="mb-1">Upload Images(3 Max)</label>
                <div class="col-md-4">
                    <div class="image-upload-file-wrapper">
                        {{
                        form_widget(form.images.vars.prototype.image_1,{'attr':{'class':'image-upload-file
                        form-control'}})
                        }}
                        <div class="mt-2 img-preview-wrapper">
                            <img src="{{ asset(tourPackageImages[0] is defined ? 'uploads/images/'~ tourPackageImages[0] : img_thumbnail)| imagine_filter('thumbnail_admin_tour')}}"
                                class="img-fluid img-preview">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="image-upload-file-wrapper">
                        {{
                        form_widget(form.images.vars.prototype.image_2,{'attr':{'class':'image-upload-file
                        form-control'}})
                        }}
                        <div class="mt-2 img-preview-wrapper">
                            <img src="{{ asset(tourPackageImages[1] is defined ? 'uploads/images/'~ tourPackageImages[1] : img_thumbnail)| imagine_filter('thumbnail_admin_tour')}}"
                                class="img-fluid img-preview">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="image-upload-file-wrapper">
                        {{
                        form_widget(form.images.vars.prototype.image_3,{'attr':{'class':'image-upload-file
                        form-control'}})
                        }}
                        <div class="mt-2 img-preview-wrapper">
                            <img src="{{ asset(tourPackageImages[2] is defined ? 'uploads/images/'~ tourPackageImages[2] : img_thumbnail)| imagine_filter('thumbnail_admin_tour')}}"
                                class="img-fluid img-preview">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    {{ form_label(form.hotel_name)}}
                    {{ form_widget(form.hotel_name,{'attr':{'class':'ht-select'}})}}
                </div>
                <div class="col-md-3">
                    {{ form_label(form.ratings)}}
                    {{ form_widget(form.ratings,{'attr':{'class':'ht-input'}})}}
                </div>
                <div class="col-md-3">
                    {{ form_label(form.no_of_rooms)}}
                    {{ form_widget(form.no_of_rooms,{'attr':{'class':'ht-input'}})}}
                </div>
            </div>
            <div class="mb-4">
                {{ form_label(form.room_details)}}
                {{ form_widget(form.room_details)}}
            </div>
            <div class="mb-4">
                {{ form_label(form.room_type)}}
                {{ form_widget(form.room_type,{'attr':{'class':'ht-input'}})}}
            </div>
            <div class="mb-4">
                {{ form_label(form.ammenities)}}
                {{ form_widget(form.ammenities)}}
            </div>
            <div class="row mb-4">
                <div class="col-md-4">
                    {{ form_label(form.phone_no)}}
                    {{ form_widget(form.phone_no,{'attr':{'class':'ht-input'}})}}
                </div>
                <div class="col-md-4">
                    {{ form_label(form.email)}}
                    {{ form_widget(form.email,{'attr':{'class':'ht-input'}})}}
                </div>
                <div class="col-md-4">
                    {{ form_label(form.website)}}
                    {{ form_widget(form.website,{'attr':{'class':'ht-input'}})}}
                </div>
            </div>
            <div class="mb-4">
                {{ form_label(form.address)}}
                {{ form_widget(form.address,{'attr':{'class':'ht-input'}})}}
            </div>
            <div class="mt-3">
                <button class="btn btn-danger">{{ form_status }} Hotel</button>
            </div>
        </div>
    </div>
    {{ form_start(form)}}
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/img-preview.js')}}"></script>
{% endblock %}