{% extends "base.html.twig" %}
{% block stylesheets %}
<style>
    #faqs-raqs-img {
        background-image: url('{{ asset("/images/image-static/kyichu-lhakhang.jpg")}}');
        height: 450px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        width: 100%;
        position: relative;
    }

    #faqs-raqs-header {
        position: absolute;
        background-color: rgba(0, 0, 0, 0.5);
        height: 100%;
        width: 100%;
    }

    #faqs-raqs-header div div h2 {
        color: white;
    }
    
    @media (max-width: 414px) {
        #faqs-raqs-img {
            height: 150px;
            background-attachment:scroll;
        }
    }
</style>
{% endblock %}
{% block body %}
<div id="faqs-raqs-img">
    <div id="faqs-raqs-header">
        <div class="d-flex align-items-center h-100">
            <div class="container">
                <h2 class="d-inline-flex text-white text-shadow-orange"><b>FAQS & RAQS</b></h2>
                <nav aria-label="breadcrumb" class="mt-3">
                    <ol class="breadcrumb bg-orange d-inline-flex ps-1 pe-3">
                        <li class="breadcrumb-item"><a href="/" class="text-white">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white">Faq's & Raq's</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    {% for faqRaq in faqsRaqs %}
    <div class="accordion" id="faq-raq-{{ loop.index }}">
        <div class="accordion-item rounded-0">
            <h2 class="accordion-header" id="heading-{{ loop.index }}">
                <button data-mdb-collapse-init class="accordion-button" type="button"
                    data-mdb-target="#collapse-{{ loop.index }}" aria-expanded="true"
                    aria-controls="collapse-{{ loop.index }}">
                    {{ faqRaq.travelInfoTitle }}
                </button>
            </h2>
            <div id="collapse-{{ loop.index }}" class="accordion-collapse collapse"
                aria-labelledby="heading-{{ loop.index }}" data-mdb-parent="#faq_raq">
                <div class="accordion-body">
                    {{ faqRaq.travelInfoDescription|raw }}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
    <div class="mt-3">
        <b>Didn't find the question or answer you were looking for?</b> <a href="/contact-us" class="btn btn-danger btn-rounded">CONTACT
            US</a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}