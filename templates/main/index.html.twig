                            <img src="{{ asset('images/hotels/city-hotel-3.jpg')}}" class="img-fluid">
                        </div>
                        <div class="ratio ratio-1x1 slide-visible">
                            <img src="{{ asset('images/hotels/hotel-930x620.jpg')}}" class="img-fluid">
                        </div>
                        <div class="ratio ratio-1x1 slide-visible">
                            <img src="{{ asset('images/hotels/hotel-druk.jpg')}}" class="img-fluid">
                        </div>
                        <div class="ratio ratio-1x1">
                            <img src="{{ asset('images/hotels/hotel-phuntsho-pelri-1.jpg')}}" class="img-fluid">
                        </div>
                        <div class="ratio ratio-1x1">
                            <img src="{{ asset('images/hotels/le-meridian.jpg')}}" class="img-fluid">
                        </div>
                        <div class="ratio ratio-1x1">
                            <img src="{{ asset('images/hotels/taj-tashi-930x620.jpg')}}" class="img-fluid">
                        </div>
                    </div>

                    <button type="button" class="slider-nav" aria-label="Go left"></button>
                    <button type="button" class="slider-nav slider-nav-next" aria-label="Go left"></button>

                    <div class="slider-indicators">
                        <button class="" aria-label="Go to slide"></button>
                        <button aria-label="Go to slide"></button>
                        <button aria-label="Go to slide"></button>
                        <button aria-label="Go to slide" class="active"></button>
                        <button aria-label="Go to slide"></button>
                        <button aria-label="Go to slide"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

