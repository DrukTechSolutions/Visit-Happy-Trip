{% extends "base.html.twig" %}
{% block stylesheets %}
<link href="{{ asset('/css/swiffy-slider.min.css')}}" rel="stylesheet" />
<style>
    #blog-view-img {
        background-image: url('{{ asset("/uploads/images/"~ blog.image.imageName)}}');
        height: 450px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        width: 100%;
        position: relative;
    }

    #blog-view-header {
        position: absolute;
        background-color: rgba(0, 0, 0, 0.5);
        height: 100%;
        width: 100%;
    }

    #blog-view-header div div h2 {
        color: white;
    }

    @media (max-width: 414px) {
        #blog-view-img {
            height: 150px;
        }
    }
</style>
{% endblock %}
{% block body %}
<div id="blog-view-img">
    <div id="blog-view-header">
        <div class="d-flex align-items-center  h-100">
            <div class="container">
                <h4 class="d-inline-flex bg-black text-warning p-2">{{ blog.blogTitle|upper}}</h4>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-9">
            <div class="mb-3 mt-3">
                {{ include('main/pages/_social_sharer.html.twig',) }}
            </div>
            {{ blog.blogDescription|raw}}
        </div>
        <div class="col-md-3">
            <div class="bg-orange p-2">
                <b class="text-white">LATEST BLOG</b>
            </div>
            {% for blog in blogs %}
            <div class="blog-card-box-shadow mt-2">
                <a href="{{ path('view-blog',{'id' : blog.id, 'slug' : blog.blogSlug })}}" class="nav-link">
                    <div class="d-flex">
                        <div class="p-2 flex-shrink-1">
                            <img src="{{ asset("/uploads/images/"~ blog.image.imageName)}}" class="img-fluid" width="100">
                        </div>
                        <div class="p-2 w-100 font-size-12">{{ blog.blogTitle}}</div>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}