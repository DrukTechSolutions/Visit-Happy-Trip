{% extends "base.html.twig" %}
{% block stylesheets %}
<style>
    #contact-img {
        background-image: url('{{ asset("/images/image-static/noon.jpg")}}');
        height: 450px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        width: 100%;
        position: relative;
    }

    #contact-header {
        position: absolute;
        background-color: rgba(0, 0, 0, 0.5);
        height: 100%;
        width: 100%;
    }

    #contact-header div div h2 {
        color: white;
    }
    .mapswrapper {
        z-index: 0;
    }
    
    @media (max-width: 414px) {
        #contact-img {
            height: 150px;
        }
    }
</style>
{% endblock %}
{% block body %}
<div id="contact-img">
    <div id="contact-header">
        <div class="d-flex align-items-center h-100">
            <div class="container">
                <h2 class="d-inline-flex text-warning text-white text-shadow-orange"><b>CONTACT US</b></h2>
                <nav aria-label="breadcrumb" class="mt-3">
                    <ol class="breadcrumb bg-orange d-inline-flex ps-1 pe-3">
                        <li class="breadcrumb-item"><a class="text-white">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white">Contact us</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="mapswrapper"><iframe class="w-100" height="400" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8&q=Visit%20happy%20trip%20Thimphu%20Bhutan&zoom=14&maptype=roadmap"></iframe><a href="https://www.taxuni.com/west-virginia-state-income-tax/">West Virginia State Income Tax</a><style>.mapswrapper{background:#fff;position:relative}.mapswrapper iframe{border:0;position:relative;z-index:2}.mapswrapper a{color:rgba(0,0,0,0);position:absolute;left:0;top:0;z-index:0}</style></div>
<div class="container mt-2">
    <div class="row">
        <div class="col-md-6 mt-3">
            <h3 class="text-orange">GET IN TOUCH</h3>
            <p>For general enquiries, bookings or an obligation-free quote, You can contact us via phone, email or leave
                us
                a message below.</p>
            {{ form_start(form) }}
            <div class="mt-2">
                {{ form_label(form.name)}}
                {{ form_widget(form.name,{'attr':{'class': 'ht-input'}})}}
                <span class="mt-1 text-purple" id="name-error"></span>
            </div>
            <div class="mt-2">
                {{ form_label(form.email)}}
                {{ form_widget(form.email,{'attr':{'class': 'ht-input'}})}}
                <span class="mt-1 text-purple" id="email-error"></span>
            </div>
            <div class="mt-2">
                {{ form_label(form.subject)}}
                {{ form_widget(form.subject,{'attr':{'class': 'ht-input'}})}}
                <span class="mt-1 text-purple" id="subject-error"></span>
            </div>
            <div class="mt-2">
                {{ form_label(form.message)}}
                {{ form_widget(form.message,{'attr':{'class': 'ht-input', 'rows': '8'}})}}
                <span class="mt-1 text-purple" id="msg-error"></span>
            </div>
            <div class="mt-2">
                <button type="button" class="btn-orange send-msg-btn w-100 p-2 border-0 text-white">Send Message</button>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-md-6 bg-orange mt-3">
            <img src="{{ asset("/images/image-static/contact-us.png")}}" class="img-fluid">
        </div>
    </div>
</div>
<div class="container-xxl mt-5">
    <div class="row text-center">
        <div class="col-md-3">
            <div class="border border-dark p-3">
                <i class="fa-solid fa-phone fa-2x"></i>
                <h5 class="text-orange mt-2"><b>Contact us at</b></h5>
                <b>+975-77700226</b>
            </div>
        </div>
        <div class="col-md-3">
            <div class="border border-dark p-3">
                <i class="fa-regular fa-envelope fa-2x"></i>
                <h5 class="text-orange mt-2"><b>Email us at</b></h5>
                <b>info@www.visithappytrip.com</b>
            </div>
        </div>
        <div class="col-md-3">
            <div class="border border-dark p-3">
                <i class="fa-solid fa-globe fa-2x"></i>
                <h5 class="text-orange mt-2"><b>Visit us at</b></h5>
                <b>www.visithappytrip.com</b>
            </div>
        </div>
        <div class="col-md-3">
            <div class="border border-dark p-3">
                <i class="fa-solid fa-location-dot fa-2x"></i>
                <h5 class="text-orange mt-2"><b>Location</b></h5>
                <b>RTC Junction, Babesa, Thimphu</b>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="{{ asset('/js/contact.js')}}"></script>
{% endblock %}