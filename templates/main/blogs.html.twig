{% extends "base.html.twig" %}
{% block stylesheets %}
<link href="{{ asset('/css/swiffy-slider.min.css')}}" rel="stylesheet" />
<style>
    #blog-view-img {
        background-image: url('{{ asset("/images/image-static/blog.jpg")}}');
        height: 450px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        width: 100%;
        position: relative;
    }

    #blog-view-header {
        position: absolute;
        background-color: rgba(0, 0, 0, 0.5);
        height: 100%;
        width: 100%;
    }

    #blog-view-header div div h2 {
        color: white;
    }
</style>
{% endblock %}
{% block body %}
<div id="blog-view-img">
    <div id="blog-view-header">
        <div class="d-flex align-items-center  h-100">
            <div class="container">
                <h2 class="d-inline-flex bg-black text-warning p-2">OUR BLOG</h2>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        {% for blog in blogs %}
        <div class="col-md-4">
            <a href="{{ path('view-blog',{'id' : blog.id, 'slug' : blog.blogSlug })}}">
                <div class="card">
                    <img src="{{ asset(asset('uploads/images/'~ blog.image.imageName)) }}">
                    <div class="card-body">
                        <b>{{ blog.blogTitle}}</b>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}