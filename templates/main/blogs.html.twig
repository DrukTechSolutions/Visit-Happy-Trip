{% extends "base.html.twig" %}
{% block stylesheets %}
<link href="{{ asset('/css/swiffy-slider.min.css')}}" rel="stylesheet" />
<style>
    #blog-view-img {
        background-image: url('{{ asset("/images/image-static/blog.jpg")}}');
        height: 450px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        width: 100%;
        position: relative;
    }

    #blog-view-header {
        position: absolute;
        background-color: rgba(0, 0, 0, 0.5);
        height: 100%;
        width: 100%;
    }

    #blog-view-header div div h2 {
        color: white;
    }
    
    @media (max-width: 414px) {
        #blog-view-img {
            height: 150px;
        }
    }
</style>
{% endblock %}
{% block body %}
<div id="blog-view-img">
    <div id="blog-view-header">
        <div class="d-flex align-items-center  h-100">
            <div class="container">
                <h2 class="d-inline-flex text-warning text-white text-shadow-orange"><b>OUR BLOG</b></h2>
                <nav aria-label="breadcrumb" class="mt-3">
                    <ol class="breadcrumb bg-orange d-inline-flex ps-1 pe-3">
                        <li class="breadcrumb-item"><a class="text-white">Home</a></li>
                        <li class="breadcrumb-item"><a class="text-white">Our blog</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">
    <div class="row">
        {% for blog in blogs %}
        <div class="col-md-4">
            <a href="{{ path('view-blog',{'id' : blog.id, 'slug' : blog.blogSlug })}}">
                <div class="card card-box-shadow mt-2 rounded-0">
                    <img src="{{ asset(asset('uploads/images/'~ blog.image.imageName)|imagine_filter('thumbnail_blog')) }}">
                    <div class="card-body">
                        <b>{{ blog.blogTitle}}</b>
                    </div>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{% endblock %}