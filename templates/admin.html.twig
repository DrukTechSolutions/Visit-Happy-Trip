<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Admin Panel{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/favicon/favicon.jpg')}}">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
    <!-- MDB -->
    <link href="{{ asset('/css/mdb.min.css')}}" rel="stylesheet" />
    <link href="{{ asset('/css/admin.css')}}" rel="stylesheet" />
    {% block stylesheets %}
    {% endblock %}
    <style>
        body {
            font-family: "Roboto", sans-serif;
            font-weight: 500;
            background-color: #e4e4e4;
        }
    </style>
</head>

<body>

    {% set blogs_routes = ['blogs','add-blog', 'update-blog'] %}
    {% set category_routes = ['add-tour-category', 'update-tour-category'] %}
    {% set hotels_routes = ['hotels-in-bhutan', 'add-hotels-in-bhutan', 'update-hotels-in-bhutan'] %}
    {% set top_destinations_routes = ['top-destinations-all', 'add-top-destination', 'update-top-destination'] %}
    {% set tour_package_routes = ['tour-packages', 'add-tour', 'update-tour-package'] %}

    <nav class="navbar navbar-expand-lg fixed-top bg-white" style="margin-bottom: 105px; z-index: 1;">
        <div class="container-xxl">
            <a class="navbar-brand" href="{{ path('app_admin')}}">
                ADMIN
            </a>
            <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                data-mdb-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a href="{{ path('app_logout')}}" class="btn btn-primary">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-xxl" style="margin-top: 100px; margin-bottom: 100px;">
        <div class="row">
            <div class="col-md-3" id="left-menu-wrapper">
                <div class="card">
                    <div class="p-1 text-end" id="expand-close-btn">
                        <button class="btn btn-danger" id="close-btn"><i class="fa-solid fa-xmark"></i></button>
                    </div>
                    <div id="menu-list-card-body">
                        <ul class="list-group list-group-light rounded-0">
                            <li
                                class="list-group-item border-0 menu-list-item {% if (app.request.get('_route') == 'app_admin') %}active-menu{% endif %}">
                                <a href="{{ path('app_admin')}}" class="nav-link"><i
                                        class="fa-solid fa-house me-3 text-center" style="width: 20px;"></i> <span
                                        class="menu-name">Home</span></a>
                            </li>
                            <li class="list-group-item border-0 menu-list-item {% if app.request.get('_route') in tour_package_routes %}active-menu{% endif %}">
                                <a href="{{ path('admin-tour-packages')}}" class="nav-link"><i
                                        class="fa-solid fa-umbrella-beach me-3 text-center" style="width: 20px;"></i>
                                    <span class="menu-name">Tours Packages</span></a>
                            </li>
                            <li class="list-group-item border-0 menu-list-item {% if app.request.get('_route') in top_destinations_routes %}active-menu{% endif %}">
                                <a href="{{ path('top-destinations-all')}}" class="nav-link"><i
                                        class="fa-solid fa-location-dot me-3 text-center" style="width: 20px;"></i>
                                    <span class="menu-name">Top Destinations</span></a>
                            </li>
                            <li class="list-group-item border-0 menu-list-item {% if app.request.get('_route') in hotels_routes %}active-menu{% endif %}">
                                <a href="{{ path('hotels-in-bhutan')}}" class="nav-link"><i
                                        class="fa-solid fa-hotel me-3 text-center" style="width: 20px;"></i> <span
                                        class="menu-name">Hotels</span></a>
                            </li>
                            <li class="list-group-item border-0 menu-list-item {% if app.request.get('_route') in blogs_routes %}active-menu{% endif %}">
                                <a href="{{ path('blogs')}}" class="nav-link"><i
                                        class="fa-regular fa-newspaper me-3 text-center" style="width: 20px;"></i> <span
                                        class="menu-name">Blog</span></a>
                            </li>
                            <li class="list-group-item border-0 menu-list-item {% if app.request.get('_route') in category_routes %}active-menu{% endif %}">
                                <a href="{{ path('add-tour-category')}}" class="nav-link"><i
                                        class="fa-solid fa-list me-3 text-center" style="width: 20px;"></i> <span
                                        class="menu-name">Categroy</span></a>
                            </li>
                            <li class="list-group-item border-0 menu-list-item {% if (app.request.get('_route') == 'all-faqs-and-raqs') %}active-menu{% endif %}">
                                <a href="{{ path('all-faqs-and-raqs')}}" class="nav-link"><i
                                        class="fa-solid fa-question me-3 text-center" style="width: 20px;"></i> <span
                                        class="menu-name">FAQs & RAQs</span></a>
                            </li>
                            <li class="list-group-item border-0 menu-list-item {% if (app.request.get('_route') == 'all-travel-and-visa') %}active-menu{% endif %}">
                                <a href="{{ path('all-travel-and-visa')}}" class="nav-link"><i
                                        class="fa-solid fa-plane me-3 text-center" style="width: 20px;"></i> <span
                                        class="menu-name">Travel & Visa</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9" id="right-content-wrapper">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <img src="{{ asset('images/logos/footer-for-login.png')}}" class="img-fluid">
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    {% block javascripts %}
    {% endblock %}
    <script src="{{ asset('/js/mdb.umd.min.js')}}"></script>
    <script src="{{ asset('/js/admin.js')}}"></script>
</body>

</html>